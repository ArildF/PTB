<fluentWpf:AcrylicWindow x:Class="Rogue.Ptb.UI.Views.ImageWindow"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:fluentWpf="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
                         mc:Ignorable="d"
                         xmlns:ui="http://schemas.modernwpf.com/2019"
                         NoiseOpacity="0.07"
                         TintOpacity="0.9"
                         ui:ThemeManager.IsThemeAware="True"
                         Icon="../Resources/Art/Icon.png"
                         SizeToContent="WidthAndHeight"
                         Title="Image" >
	<fluentWpf:AcrylicWindow.CommandBindings>
		<CommandBinding Command="Copy" Executed="CommandBinding_OnExecuted"></CommandBinding>
	</fluentWpf:AcrylicWindow.CommandBindings>
	<Image Margin="30" x:Name="Image" Stretch="None"/>
</fluentWpf:AcrylicWindow>
