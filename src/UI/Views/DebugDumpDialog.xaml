<Window x:Class="Rogue.Ptb.UI.Views.DebugDumpDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debug dump" Height="300" Width="300" HorizontalAlignment="Center" WindowStartupLocation="CenterOwner">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		
		<TextBox x:Name="_textBox" Grid.ColumnSpan="2" Margin="4" />
		<Button IsDefault="True" Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch" Width="100" Margin="4" Click="Button_Click">Ok</Button>
    </Grid>
</Window>
